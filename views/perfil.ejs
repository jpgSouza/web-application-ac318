<body>
    <%- include('partials/header') %>
    <!-- Perfil -->
    <div class="container bootstrap snippet cardstyle">
        <div class="panel-body inf-content">
            <form action="/updateuser" method="POST">
                <div class="row">
                    <div class="col-md-4">
