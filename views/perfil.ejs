            </div>
        </div>
    </div>



    <!-- Modal1 -->
    <div class="modal fade" id="eventomodal" tabindex="-1" role="dialog" aria-labelledby="eventomodalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eventomodalLabel">Evento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/createevent" method="POST">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="fotoevento">Foto</label>
                            <input type="file" class="form-control" id="fotoevento" placeholder="foto">
                        </div>
                        <div class="form-group">
                            <label for="nomeevento">Nome do evento</label>
                            <input name="name" type="text" class="form-control" id="nomeevento" placeholder="Nome">
                        </div>
                        <div class="form-group">
                            <label for="dataevento">Data</label>
                            <input name="date" type="datetime-local" class="form-control" id="dataevento"
                                placeholder="Data">
                        </div>
                        <div class="form-group">
                            <label for="localevento">Local</label>
                            <input name="place" type="text" class="form-control" id="localevento" placeholder="Local">
                        </div>
                        <div class="form-group">
                            <label for="localevento">Preco</label>
                            <input name="price" type="text" class="form-control" id="precoevento" placeholder="Preco">
                        </div>
                        <div class="form-group">
                            <label for="descricaoevento">Descrição</label>
                            <input name="description" type="text" class="form-control" id="descricaoevento"
                                placeholder="Descrição">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Imovel -->
    <div class="modal fade" id="imovelmodal" tabindex="-1" role="dialog" aria-labelledby="imovelmodalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imovelmodalLabel">Imovel</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
